<table border="1">
   <tr>
      <td>请假类型</td>
      <td>
         <select name="fp_leaveType" id="leaveType" value="${leaveType}">
            <option>事假</option>
            <option>病假</option>
            <option>公假</option>
            <option>调休</option>
            <option>婚假</option>
         </select>
      </td>
   </tr>
   <tr>
      <td>开始时间</td>
      <td>
         <input type="text" name="fp_startTime" id="startTime" class="datetime required" value="${startTime}"/>
      </td>
   </tr>
   <tr>
       <td>结束时间</td>
       <td>
          <input type="text" name="fp_endTime" id="endTime" class="datetime required" value="${endTime}"/>
       </td>
   </tr>
   <tr>
      <td>请假原因</td>
      <td>
         <textarea id="reason" name="fp_reason" value="${reason}"/>
      </td>
   </tr>   
</table>